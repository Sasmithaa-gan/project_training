@model IEnumerable<project1.Models.reimburse>

@{
    ViewBag.Title = "reimburselist";
    Layout = "~/Views/Shared/sidebar.cshtml";
}

<html>
<head>
    <style>
        .button {
            background-color: royalblue;
            border: none;
            color: white;
            padding: 6px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }


        #records {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #records td, #records {
                border: 1px solid #ddd;
                padding: 8px;
            }

                #records tr:nth-child(even) {
                    background-color: #f2f2f2;
                }

                #records tr:hover {
                    background-color: #ddd;
                }

                #records th {
                    padding-top: 12px;
                    padding-bottom: 12px;
                    text-align: left;
                    background-color: dodgerblue;
                    color: white;
                }
    </style>

</head>

<body>
    <h2 style="color:black" align="center"><b>Expenses Details</b></h2>
    <br />
    <table class="table" id="records">
        <tr>
